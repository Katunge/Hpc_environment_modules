set     appname         bowtie2
set     version         2.3.4.1
set     prefix          /opt/apps/${appname}/${version}
set     exec_prefix_1   ${prefix}
set     exec_prefix_2   ${prefix}/scripts
set     url             "http://bowtie-bio.sourceforge.net/bowtie2/index.shtml"
set     msg             "Bowtie2 is an ultrafast & memory-efficient tool for al$

proc ModulesHelp { } {
    puts stderr "$msg"
}

module-whatis   "$msg"

conflict        $appname

prepend-path    PATH    ${exec_prefix_1}
prepend-path    PATH    ${exec_prefix_2}
